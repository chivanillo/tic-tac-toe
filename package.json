{
  "name": "tic-tac-toe",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://chivanillo.github.io",
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "release": "npm run clean && npm run build",
    "deploy": "cd dist && git add --all && git commit -m \"Release at $(date)\" && git push origin gh-pages",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
